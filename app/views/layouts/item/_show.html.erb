<% if flash[:notice] == "Cette photo vient d'être ajoutée à votre panier" %>
  <div class="alert alert-dismissible alert-success">
    <div class="notice"><strong><%= flash[:notice] %></strong></div>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
<% elsif flash[:notice] == "Problème d'ajout au panier" %>
  <div class="alert alert-dismissible alert-danger">
    <div class="notice"><strong><%= flash[:notice] %></strong></div>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
<% end %>

<br>

<% if @items.exists?(params[:id])%>
<% item = @items.find(params[:id])%>

<div class="container mb-2">
  <div class="row">
    <div class="col-md-6">
      <div class="product-gallery">
        <span class="badge badge-accent text-md font-weight-normal">New</span>
        <img class="card-img-top" src="<%= item.image_url %>" alt="Cat_Picture" image="image" cap="cap"><br><br>
      </div>
    </div>
    <div class="col-md-6 pb-5">
      <br><br>
      <div class="product-meta"><a href="#">Cat picture</a></div>
      <h2 class="font-weight-bold">Buy picture from <%= item.title %></h2>
      <h3 class="font-weight-light"><%= item.price %>€</h3>
      <p><strong>"<%= item.description %>"</strong></p>
      <p class="text-muted">Once you add this picture to your cart and validate your order, you will receive your cute cat picture by mail under a vitem_idery short time.</p>
      <p class="text-muted">All of our cat picture are certificated 100% cute. All of our cats pictured on these pic are very well traited and get a lot of hugs and kisses.</p>
      <br>
      <a href="/cart/<%= item.id %>" data-method="put" class="btn btn-gradient btn-block m-0"> add to cart </a>
    </div>
  </div>
  <a href="<%= root_path %>">Back to product page</a>
</div>

<%end%>
