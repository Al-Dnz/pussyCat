<div class="container" align="center">
  <div class="col-md-6">

<h2>Ajouter un nouvel article</h2>

<%= form_tag url_for(action: 'create'), multipart: true, method: "post" do %>



   <div class="form-group">
         <%= label_tag 'Titre' %>
         <%= text_field_tag 'title', @title, class: "form-control "  %>
   </div>

   <div class="form-group">
         <%= label_tag 'Description' %>
         <%= text_area_tag 'description', @description, class: "form-control "  %>
   </div>

   <div class="form-group">
         <%= label_tag 'Prix' %>
         <%= text_field_tag 'price', @price, class: "form-control "  %>
   </div>




   <div class="form-group">

     <%= file_field_tag :cat %>
 </div>
    <br>



   <div class="form-group">
         <%= submit_tag "Creer", class: 'btn btn-primary btn-submit' %>
   </div>

   <% end %>

</div>
</div>
