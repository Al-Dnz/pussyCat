<div class="container" align="center">
  <div class="col-md-6">

<h2>New Item</h2>

<%= form_tag url_for(action: 'create'), multipart: true, method: "post" do %>



   <div class="form-group">
         <%= label_tag 'Title' %>
         <%= text_field_tag 'title', @title, class: "form-control "  %>
   </div>

   <div class="form-group">
         <%= label_tag 'Description' %>
         <%= text_area_tag 'description', @description, class: "form-control "  %>
   </div>

   <div class="form-group">
         <%= label_tag 'Price' %>
         <%= text_field_tag 'price', @price, class: "form-control "  %>
   </div>



   <div class="form-group">

     <%= file_field_tag :cat %>
 </div>


   <div class="form-group">
         <%= submit_tag "Create item", class: 'btn btn-primary btn-submit' %>
   </div>

   <% end %>

</div>
</div>
