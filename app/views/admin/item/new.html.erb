<div class="container" align="center">
  <div class="col-md-6">

<h2>New Item</h2>

<%= form_tag url_for(action: 'create'), multipart: true, method: "post" do %>



   <div class="form-group">
         <%= label_tag 'Title' %>
         <%= text_field_tag 'Titre', @title, class: "form-control "  %>
   </div>

   <div class="form-group">
         <%= label_tag 'Description' %>
         <%= text_area_tag 'Description', @description, class: "form-control "  %>
   </div>

   <div class="form-group">
         <%= label_tag 'Price' %>
         <%= text_field_tag 'Prix', @price, class: "form-control "  %>
   </div>

   <div class="form">
         <%= label_tag 'Image' %>
         <%= text_area_tag 'image_url', @image_url, class: "form-control" %>
   </div><br>


   <div class="form-group">
         <%= submit_tag "Creer", class: 'btn btn-primary btn-submit' %>
   </div>

   <% end %>

</div>
</div>
