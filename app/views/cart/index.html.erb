<div class="container mb-2"><!-- START CONTAINER -->

  <div class="row justify-content-between p-3"><!-- START OF DIV.ROW -->

    <% if @items.count == 0 %>   <!-- START CONDITION CART.COUNT -->
      <h2>Votre panier est vide</h2>

    <% else %>
    <br>
      <h2>Votre Panier</h2>
      <br>

      <% @items.each do |item|%> <!-- START EACH LOOP FOR ITEMS -->

        <div class="row"><!-- START OF DIV.ROW of loop -->
          <div class="col-md-4">
            <br><br>
            <h5 class="font-weight-bold d-flex justify-content-around"><%= item.title %><p class="text-lead"><%= item.price %> € </p></h5>
            <p class="text-lg">"<%= item.description %>"</p>
          <div class="blockquote">
            <p class="text-muted">All of our cat picture are certificated 100% cute.
              All of our cats pictured on these pic are very well traited and get a lot of hugs and kisses.</p>
              <footer class="class blockquote-footer">Community Team</footer>
              </div>
              <%cart_item = CartItem.where(cart_id: @cart.id ,item_id: item.id)[0]%>
            <%= link_to "RETIRER DE MON PANIER", cart_item_path(cart_item.id), :method => :delete %>
          </div>

        <!-- AJAX PLACE FOR LOAD PARTIAL IMAGE -->
          <div class="col-md-8 pb-5">

          </div><!--END OF AJAX LOAD IMAGE -->


        </div><!-- END OF DIV.ROW of loop -->


      <% end %> <!-- END OF EACH LOOP FOR ITEMS -->

      </div><!-- END ROW -->

    <br>
    <h3>TOTAL : <%= @total %>€</h3>

    <%= form_tag order_index_path do %> <!-- START STRIPE -->
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount">

    </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Votre commande"
            data-amount="<%= @total * 100 %>"
            data-currency="eur"
            data-locale="auto"></script>


  <% end %>   <!-- END STRIPE -->


    <br><br>
    <a href="<%= root_path %>">Retour à la page Index</a>
    <br>

<% end %> <!-- END IF CONDITION CART.COUNT -->
</div>  <!-- END CONTAINER -->
