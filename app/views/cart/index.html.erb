<div class="container mb-2">

  <% if @items.count == 0 %>
    <h2>Votre panier est vide</h2>

  <% else %>
  <br>
    <h2>Votre Panier</h2>
    <br>

    <% @items.each do |item|%>

      <div class="row">
        <div class="col-md-6">
          <div class="product-gallery"  >


            <%= image_tag item.cat, :alt => "cat-pic" %><br><br>
          </div>
        </div>
        <div class="col-md-6 pb-5">
          <br><br>
          <h2 class="font-weight-bold"><%= item.title %></h2>
          <h3 class="font-weight-light"><%= item.price %>
            €</h3>
          <p>
            <strong>"<%= item.description %>"</strong>
          </p>
          <br>
          <%cart_item = CartItem.where(cart_id: @cart.id ,item_id: item.id)[0]%>
          <%= link_to "RETIRER DE MON PANIER", cart_item_path(cart_item.id), :method => :delete %>


        </div>

      </div>
      <br>


    <% end %>

    <br>
    <h3>TOTAL : <%= @total %>€</h3>
    <%= form_tag order_index_path  remote: true do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount">

    </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Votre commande"
            data-amount="<%= @total * 100 %>"
            data-currency="eur"
            data-locale="auto"></script>


  <% end %>


    <br><br>
    <a href="<%= root_path %>">Retour à la page Index</a>
    <br>


  </div>


<% end %>
