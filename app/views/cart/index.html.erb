<div class="container mb-2"><!-- START CONTAINER -->


<div class="row py-2">
  <% if @items.count == 0 %>   <!-- START CONDITION CART.COUNT -->
    <h2>Votre panier est vide</h2>

  <% else %>

</div>


        <!-- Table Basic Example -->
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Votre Panier</th>
        <th>Cat name</th>
        <th>Price</th>
        <th>Delete</th>
      </tr>
    </thead>


      <% @items.each do |item|%> <!-- START EACH LOOP FOR ITEMS -->


  <tbody>
    <%cart_item = CartItem.where(cart_id: @cart.id ,item_id: item.id)[0]%>
      <tr id="item-<%= cart_item.id %>">
        <th scope="row">
        <img class="d-flex mr-3" src="<%= item.cat %>" width="64" alt="cat-pic">
        </th>
        <td><%= item.title %></td>
        <td><%= item.price %></td>
        <td>
        <%= link_to "<<", cart_item_path(cart_item.id), :method => :delete, :remote => true %></td>
      </tr>
    </tbody>


      <% end %> <!-- END OF EACH LOOP FOR ITEMS -->
    </table>
    </div><!-- end table-responsive -->


    <br>
    <h3>TOTAL : <%= @total %>€</h3>

    <%= form_tag order_index_path do %> <!-- START STRIPE -->
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount">

    </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Votre commande"
            data-amount="<%= @total * 100 %>"
            data-currency="eur"
            data-locale="auto"></script>


  <% end %>   <!-- END STRIPE -->


    <br><br>
    <a href="<%= root_path %>">Retour à la page Index</a>
    <br>

<% end %> <!-- END IF CONDITION CART.COUNT -->
</div>  <!-- END CONTAINER -->
