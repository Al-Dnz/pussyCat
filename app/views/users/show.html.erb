<div class="container">
<div class="row">
  <div class="col-md-4">
    <div class="card">
  <div class="card-body">
    <h4 class="card-title"><%= @user.email %></h4>
    <p class="card-text">This is your profile page, you can check your information and your previous orders.</p>
  </div>
  <ul class="list-group list-group-flush">
    <a href="<%=edit_user_registration_path%>"><li class="list-group-item active">Edit your profile</li></a>
    <a href="<%=cart_index_path%>"><li class="list-group-item active">Check your cart</li></a>
    <% if current_user.admin? %>
    <a href="<%=new_admin_item_path%>"><li class="list-group-item active">Add new item</li></a>
    <% else %>
    <% end %>


    <li class="list-group-item"></li>
  </ul>
</div>
</div>

<div class="col-md-8">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#Order</th>
          <th>Number of item</th>
          <th>Date Purchased</th>
          <th>Status</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <th scope="row"><a href="<%=order_path(order.id)%>"><%= order.id %></a></th>
            <td><%= order.items.count %></td>
          <td><%= order.created_at.strftime("%m/%d/%Y") %></td>
          <td><span class="badge badge-success m-0">Delivered</span></td>
          <% @total = 0 %>
          <% order.items.each { |item| @total+=item.price } %>
          <td><%= @total %>â‚¬</td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
